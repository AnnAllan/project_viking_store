<h1>Sign Up or Sign In</h1>
<div class="container">
  <div class="panel col-md-6">
    <h3>I do NOT have an account...</h3>
    <%= link_to "Sign up", new_user_path, class: "btn btn-primary" %>
  </div>

  <div class="panel col-md-6">
    <h3>I have an account..</h3>
    <%= form_tag sessions_path, method: "post" do %>
      <%= "Email Address" %>
      <br />
      <%= text_field_tag :email, nil, placeholder: "Enter your email", class: "form-control form-group" %>
      <%=  "Password" %>
      <br />
      <%= text_field_tag :password, nil, placeholder: "Enter your password", class: "form-control, form-group" %>
      <br />
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
