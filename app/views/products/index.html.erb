<div class="container">

  <div class="row">
    <div class="col-md-12">
      <%= image_tag("store_img.jpg", :alt => "Store Image") %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>The Best Viking Gear on the Whole Web</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Choose from among our lineup of fine items below</h3>
    </div>
  </div>

  <div class = "row products">
    <div class="col-md-5 pull-right">
      <form action="<%= products_path %>" method="GET" class="form-inline">
        <div class="form-group">
          <%= select_tag(:products_filter, options_for_select(Category.all.map { |category| [category.name, category.id]}, @filter) , {include_blank: true, prompt: "Filter by Category", :class => "form-control"}) %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-submit">Apply Filter</button>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <%= render @products %>
  </div>
</div>
